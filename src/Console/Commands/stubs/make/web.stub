

if (siteconf()->get('news.useOwnSiteRoutes')) {
    Route::group([
        'namespace' => "SiteNews\Site",
        'as' => 'site.news.',
        'prefix' => siteconf()->get('news.path'),
    ], function () {
        Route::get('/{news}', 'NewsController@show')
            ->name('show');
        Route::get('/', 'NewsController@index')
            ->name('index');
    });
}